<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:T0yK4T.WPFTools">
    <Style TargetType="{x:Type local:BorderlessWindow}" x:Key="{x:Type local:BorderlessWindow}">
        <Setter Property="WindowStyle" Value="None"/>
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BorderlessWindow}">
                    <Border x:Name="boundingBox" BorderBrush="Transparent" Background="Transparent" BorderThickness="0">
                        <Grid Background="Transparent">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>
                            <!--These rectangles need fixing!-->
                            <Rectangle Grid.Column="0" Grid.Row="0" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNWSE" x:Name="TopLeft"/>
                            <Rectangle Grid.Column="2" Grid.Row="0" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNESW" x:Name="TopRight"/>
                            <Rectangle Grid.Column="0" Grid.Row="2" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNESW" x:Name="BottomLeft"/>
                            <Rectangle Grid.Column="2" Grid.Row="2" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNWSE" x:Name="BottomRight"/>
                            <!--These rectangles need fixing!-->
                            <Rectangle Grid.Column="0" Grid.Row="1" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeWE" x:Name="Left"/>
                            <Rectangle Grid.Column="2" Grid.Row="1" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeWE" x:Name="Right"/>
                            <Rectangle Grid.Column="1" Grid.Row="0" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNS" x:Name="Top"/>
                            <Rectangle Grid.Column="1" Grid.Row="2" Fill="#01000000" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="SizeNS" x:Name="Bottom"/>
                            <!--These rectangles need fixing!-->
                            <Border Grid.Row="1" Grid.Column="1" BorderThickness="3" CornerRadius="1" Background="{TemplateBinding Background}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="24"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle x:Name="moveGrip" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Fill="{TemplateBinding Background}"/>
                                    <ContentControl x:Name="headerControl" Content="{TemplateBinding Header}" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
                                    <ContentPresenter ContentSource="{TemplateBinding Content}" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Button BorderThickness="0" Command="{x:Static local:Commands.MinimizeWindowCommand}" Content="0" FontFamily="Webdings" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}" Grid.Column="0"/>
                                        <Button x:Name="maximizeButton" BorderThickness="0" Command="{x:Static local:Commands.MaximizeBorderlessCommand}" FontFamily="Webdings" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}" Grid.Column="1"/>
                                        <Button BorderThickness="0" Command="{x:Static local:Commands.CloseWindowCommand}" FontFamily="Webdings" Content="r" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window, Mode=FindAncestor}}" Grid.Column="2"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
